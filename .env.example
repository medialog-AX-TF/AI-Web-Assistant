# LLM API 키
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
EXAONE_API_KEY=your-exaone-api-key

# OpenAI 설정
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000
OPENAI_TOP_P=1
OPENAI_FREQUENCY_PENALTY=0
OPENAI_PRESENCE_PENALTY=0

# Anthropic 설정
ANTHROPIC_MODEL=claude-3-opus
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=2000
ANTHROPIC_TOP_P=1
ANTHROPIC_TOP_K=40

# EXA-1 설정
EXAONE_MODEL=exa-1
EXAONE_TEMPERATURE=0.7
EXAONE_MAX_TOKENS=2000
EXAONE_TOP_P=1
EXAONE_TOP_K=40

# LLM 일반 설정
DEFAULT_LLM=gpt4  # gpt4, claude, exaone
ENABLE_LOAD_BALANCING=true
LOAD_BALANCING_STRATEGY=round-robin  # round-robin, cost-based, performance-based
FALLBACK_ORDER=gpt4,claude,exaone
MAX_RETRIES=3
RETRY_DELAY=1000  # milliseconds

# 비용 관리
COST_LIMIT_DAILY=10.0  # USD
COST_LIMIT_MONTHLY=200.0  # USD
ENABLE_COST_OPTIMIZATION=true
COST_OPTIMIZATION_STRATEGY=balanced  # balanced, performance, economy

# 캐싱 설정
ENABLE_RESPONSE_CACHE=true
CACHE_TTL=3600  # seconds
CACHE_MAX_ITEMS=1000

# 보안 설정
ENABLE_API_KEY_ROTATION=true
API_KEY_ROTATION_INTERVAL=168  # hours (7 days)
ENCRYPTION_KEY=your-encryption-key
ENABLE_REQUEST_SIGNING=true

# 모니터링
ENABLE_USAGE_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true
LOG_LEVEL=info  # debug, info, warn, error

# 프록시 설정 (선택사항)
PROXY_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# 개발 설정
NODE_ENV=development  # development, production, test
DEBUG=false
API_TIMEOUT=30000  # milliseconds
ENABLE_DEBUG_LOGGING=false 